{% extends 'base.html.twig' %}

{% block title %}{{app.user.fullname}} | Reponses{% endblock %}

{% block body %}
    <div class="block mb-20">
        <h3 class="pb-30">Mes reponses</h3>
        <ul>
            {% for comment in app.user.comments %}
                <a href="{{path('question_show', {id: comment.question.id})}}">
                    <li class="pb-30">{{comment.content | slice(0, 50)}} {% if comment.content | length >= 51 %}
                        ...
                    {% endif %}</li>
                </a>
            {% endfor %}
        </ul>
    </div>
{% endblock %}